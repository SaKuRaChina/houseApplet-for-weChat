/* pages/search/search.wxss */


.rentTab{position: relative;}

.rentTabTitle{display: inline-block;width: 187.5rpx;text-align: center;height: 82rpx;line-height: 82rpx;font-size: 28rpx;background: #fff;text-decoration: underline;}
.rentDate,.rentArea,.rentOrder,.select{position: absolute;top: 82rpx;width: 750rpx;z-index: 5;background: #fff;border-top: 1px solid #666;}
.rentDate .picker{height: 90rpx;line-height: 90rpx;padding:0  100rpx;border: 1px solid #ccc;}
.rentArea{width: 750rpx;min-height: 840rpx;}
.rentAreaList{width: 150rpx;font-size: 32rpx;text-align: center;float: left;}
.rentAreaList text{display: block;height:80rpx;line-height: 80rpx; }
.rentAreaListDetail{width: 550rpx;float: left;}
.rentAreaListDetail .street{display: block;height: 80rpx;line-height: 80rpx;padding: 0 25rpx;font-size: 30rpx;}
.rentAreaListDetail text{padding: 0 20rpx;line-height: 60rpx;font-size: 28rpx;word-break: keep-all;display: inline-block}
.rentOrder{padding-left: 25rpx;}
.rentOrder view{height: 78rpx;line-height: 78rpx;font-size: 32rpx;border-bottom: 1px solid #e4e3e5;}
.selectType{padding-left: 25rpx;padding-top: 40rpx;border-bottom: 1px solid #c7d6cf;}
.selectTitle{color: #5c5c5c;font-size: 30rpx;height: 52rpx;line-height: 52rpx;display: inline-block;}
.selectAll{display: inline-block;margin-left: 10rpx;padding: 0 53rpx;border: 1px solid #5c5c5c;height: 50rpx;line-height: 50rpx;border-radius: 5px;font-size: 30rpx;}
.selectCond{font-size: 30rpx;padding: 0 10rpx;height: 94rpx;line-height: 94rpx;}


.rentList{position: relative;padding-bottom: 64rpx;}
.rentList swiper image{height: 390rpx;width: 750rpx;}
.houseCont{padding-left: 22rpx;}
.houseName{font-size: 40rpx;color: #333333;height: 84rpx;line-height: 84rpx;}
.houseIntro{font-size: 28rpx;color: #888;height: 35rpx;line-height: 35rpx;}
.houseDiscuss{padding-top: 22rpx;font-size: 30rpx;color: #529a06;height: 40rpx;line-height: 40rpx;}
.houseDiscuss image{width: 40rpx;height: 40rpx;vertical-align: middle;}
.houseDiscuss text{padding-right: 60rpx;}
.houseHost{position: absolute;top: 250rpx;right: 30rpx;}
.houseHost image{width: 114rpx;height: 114rpx;border-radius: 50%;border: 1px solid #fbfbfb;}
.houseHost view{width: 104rpx;height:40rpx;border-radius: 10rpx;line-height: 40rpx;background: #529a06;color: #fff;text-align: center;font-size: 25rpx;}